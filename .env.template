# EduChat Environment Configuration
# Copy this file to .env and add your actual API key

# Anthropic API Key for AI character responses
# Get your key from: https://console.anthropic.com/
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Optional: Conversation settings
DEFAULT_MAX_ROUNDS=3
DEFAULT_CONVERSATION_MODE=balanced

# Optional: Character customization
ENABLE_FINNISH_CHARACTERS=true
ENABLE_CUSTOM_CHARACTERS=false
